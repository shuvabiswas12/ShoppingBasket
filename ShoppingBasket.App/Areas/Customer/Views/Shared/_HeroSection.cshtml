<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                @* @await Html.PartialAsync("_Categories", Model.Categories) *@
                @await Component.InvokeAsync("Category")
            </div>
            <div class="col-lg-9">
                <partial name="_SearchBox"/>
                <div class="hero__item set-bg" data-setbg="/img/hero/hero-1.jpg">
                    <div class="hero__text">
                        <span>Genuine Product</span>
                        <h2>Ultimate <br/>100% e-Shop</h2>
                        <p class="text-white">Free Pickup and Delivery Available</p>
                        <a asp-controller="Shops" asp-action="Index" asp-area="Customer" class="primary-btn">SHOP NOW</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->