@model IEnumerable<Category>;

@{
    ViewData["Title"] = "Categories";
}

<partial name="_Toast"/>

<div class="container my-5">

    <div class="my-3">
        <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="site-btn text-light">Create Category</a>
    </div>

    <div class="card">
        <div class="card-body admin-card-body">
            <div class="card-header admin-card-header">
                <h3>Categories</h3>
            </div>

            <div class="row my-4">
                <div class="offset-lg-2 offset-md-2 col-lg-8 col-md-8">
                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr class="bg-light">
                            <th style="width: 50px;">ID</th>
                            <th>Category Name</th>
                            <th>Creation Date</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td> @category.Id </td>
                                <td> @category.Name </td>
                                <td> @category.CreatedAt </td>
                                <td>
                                    <button>EDIT</button>
                                    <button>DELETE</button>
                                </td>
                            </tr>

                        }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>