<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Ogani Template" />
    <meta name="keywords" content="Ogani, unica, creative, shopping, Basket, ecommerce, dotnet, entity-framework-core, html" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoppingBasket.App</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">

    @* bootstrap icons *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    @* this bootstrap file comes from newer template file. *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    @* this bootstrap file comes from templates file. *@
    <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css" />

    @* start: this css file comes from template file *@
    <link rel="stylesheet" href="~/css/font-awesome.min.css" type="text/css" />
    <link rel="stylesheet" href="~/css/elegant-icons.css" type="text/css" />
    <link rel="stylesheet" href="~/css/nice-select.css" type="text/css" />
    <link rel="stylesheet" href="~/css/jquery-ui.min.css" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/slicknav.min.css" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/css/toastify.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="~/css/style.css" type="text/css" />
    <link rel="stylesheet" href="~/css/modal-styles.css" type="text/css" />
    @* end *@

    <link rel="stylesheet" type="text/css" href="~/css/customStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Page Preloader -->
    @*<div id="preloder">
        <div class="loader"></div>
    </div>*@

    <!-- Humberger Begin -->
    <div class="humberger__menu__overlay"></div>
    <div id="Humberger" class="humberger__menu__wrapper">
        <div class="humberger__menu__logo">
            <a href="#">
                <img src="~/img/logo.png" alt="" width="200px" />
            </a>
        </div>
        
        <div class="humberger__menu__widget">
            <div class="header__top__right__auth">
                <partial name="_LoginPartial" />
            </div>
        </div>
        <nav class="humberger__menu__nav mobile-menu">
            <partial name="_Menus" />
        </nav>
        <div id="mobile-menu-wrap"></div>
        <div class="header__top__right__social">
            <a href="#">
                <i class="fa fa-facebook"></i>
            </a>
            <a href="https://www.linkedin.com/in/shuva-biswas/">
                <i class="fa fa-linkedin"></i>
            </a>
            <a href="https://github.com/shuvabiswas12/ShoppingBasket" target="_blank">
                <i class="bi bi-github"></i>
            </a>
        </div>
        <div class="humberger__menu__contact">
            <ul>
                <li><i class="fa fa-envelope"></i> hello@example.com</li>
                <li>Free Shipping for all Order of $99</li>
            </ul>
        </div>
    </div>
    <!-- Humberger End -->
    <!-- Header Section Begin -->
    <header class="header" id="header" style="margin-bottom: 20px">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__left d-flex align-items-center mt-2">
                            <ul>
                                <li><i class="fa fa-envelope"></i> hello@example.com</li>
                                <li></li>
                            </ul>
                            <div class="d-flex">
                                <a href="#" class="text-secondary mx-2">
                                    <i class="fa fa-facebook"></i>
                                </a>
                                <a href="https://github.com/shuvabiswas12/ShoppingBasket" class="text-secondary mx-2">
                                    <i class="bi bi-github"></i>
                                </a>
                                <a href="https://www.linkedin.com/in/shuva-biswas/" class="text-secondary mx-2">
                                    <i class="fa fa-linkedin"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__right">
                            <div class="header__top__right__auth">
                                <partial name="_LoginPartial" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="header__logo">
                        <a href="#">
                            <img src="~/img/logo.png" alt="" width="200px" />
                        </a>
                    </div>
                </div>
                <div class="col-lg-7">
                    <nav class="header__menu">
                        <partial name="_Menus" />
                    </nav>
                </div>
                <div class="col-lg-2">
                    <div class="header__cart">
                        @* right sided menus *@

                    </div>
                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->

    <main role="main" class="pb-3">
        <partial name="_Toast" />

        @RenderBody()
    </main>

    <partial name="_Footer" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* previous version of bootstrap js *@
    <script src="~/js/bootstrap.min.js"></script>

    @* newer version of bootstrap js *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @* start: coming from templates *@
    <script src="~/js/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/js/jquery.nice-select.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/jquery.slicknav.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js" crossorigin="anonymous"></script>
    <script src="~/js/main.js"></script>
    @* end *@

    <script src="~/js/toastify-js.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>