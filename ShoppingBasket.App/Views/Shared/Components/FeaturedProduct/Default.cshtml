@model IEnumerable<Product>

<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>

            </div>
        </div>
        <div class="row featured__filter d-flex justify-content-center align-items-center">
            @if (!Model.Any())
            {
                <p class="fs-4 fw-bold text-danger px-2 py-4 text-center border">No product has been featured yet !!</p>
            }
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="@product.ProductImage_1">
                            <ul class="featured__item__pic__hover">
                                <li>
                                    @if (product.Wishlist == null)
                                    {
                                        <a onclick="addOrRemoveToWishlist(this, @product.Id)">
                                            <span class="icon_heart_alt"></span>
                                        </a>
                                    }
                                    else
                                    {
                                        <a onclick="addOrRemoveToWishlist(this, @product.Id)">
                                            <span class="bi bi-heart-fill"></span>
                                        </a>
                                    }
                                </li>
                                <li>
                                    <a onclick="addToCart(this, @product.Id)">
                                        <i class="fa fa-shopping-cart"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6>
                                <a asp-action="Details" asp-controller="Shops" asp-area="Customer" asp-route-id="@product.Id">@product.Name</a>
                            </h6>
                            <h5>@product.Price.ToString("C2")</h5>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</section>
<!-- Featured Section End -->